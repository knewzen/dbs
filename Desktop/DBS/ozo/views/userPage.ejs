<!DOCTYPE HTML>
<html>
    <head>
        <title>用户页面</title>
        <%- include partials/head.ejs %>
        <script src="/javascripts/getPosition.js" type="text/javascript"></script>
        <script>
                getPosition();
                //在这里获取地理信息,獲取接到和行政區，放到輸入裏
        </script>
    </head>
    <body>
        <!-- <h3>id:<%=id%></h3> -->
        <section class="hero is-white is-bold is-fullheight">
            <div class="hero-head">
                <%- include partials/uheader.ejs %>
            </div>
            <div class="hero-body">
                <div class="container">

                  <div class="tile is-ancestor is-vertical">
                      <div class="tile is-parent">
                          <div class="tile is-parent is-vertical ">
                              <form class="tile is-child notification is-primary button" action="/users/user/rent" method="post" onclick="this.submit()">
                                  <p class="title has-text-light has-text-centered"><span>租车</span>
                                      <span class="icon is-medium">
                                        <i class="fa fa-lg fa-user-plus"></i>
                                      </span>
                                  </p>
                                  <input name="id" type="hidden" value=<%=id%> />
                              </form>
                              <form class="tile is-child notification is-primary button" action="/users/user/info" method="post" onclick="this.submit()">
                                  <p class="title has-text-light has-text-centered"><span>个人信息</span>
                                      <span class="icon is-medium">
                                        <i class="fa fa-lg fa-user-times"></i>
                                      </span>
                                  </p>
                                  <input name="id" type="hidden" value=<%=id%> />
                              </form>
                          </div>
                          <div class="tile is-parent is-vertical ">
                              <form class="tile is-child notification is-primary button" action="/users/user/orders" method="post" onclick="this.submit()">
                                  <p class="title has-text-light has-text-centered"><span>订单信息</span>
                                      <span class="icon is-medium">
                                        <i class="fa fa-lg fa-bicycle"></i>
                                      </span>
                                  </p>
                                  <input name="id" type="hidden" value=<%=id%> />
                              </form>
                              <form class="tile is-child notification is-primary button" action="/users/user/find" method="post" onclick="this.submit()">
                                  <p class="title has-text-light has-text-centered"><span>查找附近车辆</span>
                                      <span class="icon is-medium fa-stack">
                                          <i class="fa fa-stack-1x fa-bicycle has-text-grey"></i>
                                          <i class="fa fa-stack-2x fa-ban"></i>
                                      </span>
                                  </p>
                                  <input name="id" type="hidden" value=<%=id%> />
                                  <input class="latitude" name="latitude" type="hidden" value="0" />
                                  <input class="longitude" name="longitude" type="hidden" value="0" />
                                  <input name="district" type="hidden" value="none" />
                                  <input name="street" type="hidden" value="none" />
                              </form>
                          </div>

                      </div>

                  </div>

                </div>
              </div>
      </section>
        <%- include partials/footer.ejs %>
    </body>
</html>
