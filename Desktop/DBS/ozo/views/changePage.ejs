<!DOCTYPE HTML>
<html>
    <head>
        <title>用户修改界面</title>
        <%- include partials/head.ejs %>
    </head>
    <!--這個頁面是用戶修改信息頁面-->
    <body>
      <section class="hero is-white is-bold is-fullheight">
          <div class="hero-head">
              <%- include partials/uheader.ejs %>
          </div>
          <div class="hero-body">
              <div class="container">
                  <div class="columns">
                      <h1 class="title column is-3 is-offset-one-quarter"><%=message%></h1>
                      <div class="column is-offset-2">
                          <form action="/users/user/" method="post">
                              <input name="id" type="hidden" value=<%=id%> />
                              <input name="username" type="hidden" value=<%=username%> />
                              <button class="button is-primary is-medium" type="submit">返回</button>
                          </form>
                      </div>
                  </div>

                  <div class="columns is-centered">
                      <div class="field column is-4" style="width:50%">
                          <form action="/users/user/change/basic" method="post">
                              <input name="id" type="hidden" value=<%=id%> />
                              <label class="label">您的用户名</label>
                              <div class="control has-icons-left">
                                  <input class="input" name="new_username" type="text" placeholder="请输入新的用户名" value=<%=username%>>
                                  <span class="icon is-small is-left">
                                    <i class="fa fa-user"></i>
                                  </span>
                              </div>
                              <br>
                              <label class="label">您的工作</label>
                              <div class="control has-icons-left">
                                  <input class="input" name="new_job" type="text" placeholder="请填写新用户工作" value=<%=job%> >
                                  <span class="icon is-small is-left">
                                    <i class="fa fa-user-circle "></i>
                                  </span>
                              </div>
                              <br>
                              <div class="field is-horizontal">
                                <div class="field-body">
                                  <div class="field">
                                      <label class="label">您的性别</label>
                                      <div class="field is-narrow">
                                        <div class="control">
                                          <label class="radio">
                                            <input name="new_gender" type="radio" value="0" checked>女
                                          </label>
                                          <label class="radio">
                                            <input name="new_gender" type="radio" value="1" >男
                                          </label>
                                        </div>
                                      </div>
                                  </div>
                                </div>
                              </div>
                              <div class="field is-grouped is-grouped-left">
                                <p class="control">
                                  <button class="button is-link" type="submit">修改完毕，确定保存</button>
                                </p>
                              </div>
                            </form>
                            <br>
                            <form action="/users/user/change/password" method="post">
                                <input name="id" type="hidden" value=<%=id%> />
                              <div class="field is-grouped is-grouped-left">
                                <p class="control">
                                  <button class="button is-primary" type="submit">前往修改密码</button>
                                </p>
                              </div>
                            </form>
                      </div>
                  </div>

