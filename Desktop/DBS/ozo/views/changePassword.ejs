<!DOCTYPE HTML>
<html>
    <head>
        <title>用户修改密码界面</title>
        <%- include partials/head.ejs %>
    </head>
    <!--這個頁面是用戶修改密碼頁面-->
    <body>
      <section class="hero is-white is-bold is-fullheight">
          <div class="hero-head">
              <%- include partials/uheader.ejs %>
          </div>
          <div class="hero-body">
              <div class="container">
                  <div class="columns">
                      <h1 class="title column is-3 is-offset-one-quarter"><%=message%></h1>
                      <div class="column is-offset-2">
                          <form action="/users/user" method="post">
                              <input name="id" type="hidden" value=<%=id%> />
                              <button class="button is-primary is-medium" type="submit">返回</button>
                          </form>
                      </div>
                  </div>
                  <div class="columns is-centered">
                      <div class="field column is-4" style="width:50%">
                        <form action="/users/user/change/password/pass" method="post">
                            <input name="id" type="hidden" value=<%=id%> />
                            <label class="label">旧密码</label>
                            <div class="control has-icons-left">
                                <input class="input" name="old_password" type="text" placeholder="请输入原密码">
                                <span class="icon is-small is-left">
                                  <i class="fa fa-user"></i>
                                </span>
                            </div>
                            <br>
                            <label class="label">新密码</label>
                            <div class="control has-icons-left">
                                <input class="input" name="new_password" type="text" placeholder="请输入新密码" >
                                <span class="icon is-small is-left">
                                  <i class="fa fa-user-circle"></i>
                                </span>
                            </div>
                            <br>
                            <div class="field is-grouped is-grouped-left">
                              <p class="control">
                                <button class="button is-primary" type="submit">确认修改</button>
                              </p>
                            </div>
                        </form>
                        <br>
                        <form action="/users/user/change" method="post">
                            <input name="id" type="hidden" value=<%=id%> />
                            <input name="msg" type="hidden" value="未进行密码修改" />
                            <div class="field is-grouped is-grouped-left">
                              <p class="control">
                                <button class="button is-link" type="submit">放弃修改，返回</button>
                              </p>
                            </div>
                        </form>
                      </div>
                    </div>

      </div>
    </div>
      </section>
        <%- include partials/footer.ejs %>
    </body>
</html>
