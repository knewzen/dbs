<!DOCTYPE HTML>
<html>
<head>
<meta charset="UTF-8">
<title>OZO注册</title>
<link rel=stylesheet type=text/css href='/stylesheets/login.css'>
<script src="/javascripts/jquery-1.7.2.min.js" type="text/javascript"></script>
<script src="/javascripts/getPosition.js" type="text/javascript"></script>
<script>
        getPosition();
</script>
<script>
    function check()
    {
        var phone = document.getElementById('phone_number');
        var p1 = document.getElementById('password');
        var p2 = document.getElementById('password_confirm');
        if(phone.value == undefined || phone.value == '')
        {
            alert('请输入手机号');
            return false;
        }
        if(phone.value.length < 11)
        {
            alert('手机号有误，不足11位');
            return false;
        }
        if(p1.value == undefined || p1.value == '' || p.value == '输入密码')
        {
            alert('请输入密码');
            return false;
        }
        if(p1.value.length < 6)
        {
            alert('密码至少为6位');
            return false;
        }
        var regexp = /^[0-9a-zA-Z\_\.]{6}[0-9a-zA-Z\_\.]*$/;
        if(!regexp.test(p1.value))
        {
            window.alert('密码只能由数字、下划线、点符号组成');
            return false;
        }
        if(p2.value == undefined || p2.value == '')
        {
            alert('请输入确认密码');
            return false;
        }
        if(p1.value != p2.value)
        {
            alert('两次的密码不一致');
            return false;
        }
        return true;
    }
</script>
</head>
<body>
<div class="logo_box">
	<h1>请填写以下信息</h1>
	<form action="/login/register_pass" name="f" method="post" onsubmit="return check()">
		<div class="input_outer">
			<span class="u_user"></span>
			<input name="logname" class="text" onFocus=" if(this.value=='用户名') this.value=''" onBlur="if(this.value=='') this.value='用户名'" value="用户名" style="color: #FFFFFF !important" type="text">
        </div>
        <div class="input_outer">
			<span class="phone"></span>
			<label class="l-login phone_number" style="color: rgb(255, 255, 255);display: block;">手机号码</label>
			<input id='phone_number' name="phone_number" class="text" style="color: #FFFFFF !important; position:absolute; z-index:100;" onFocus="$('.phone_number').hide()" onBlur="if(this.value == '') $('.phone_number').show()" value="" type="text">
        </div>
		<div class="input_outer">
			<span class="us_uer"></span>
			<label class="l-login login_password" style="color: rgb(255, 255, 255);display: block;">输入密码</label>
			<input id='password' name="logpass" class="text" style="color: #FFFFFF !important; position:absolute; z-index:100;" onFocus="$('.login_password').hide()" onBlur="if(this.value == '') $('.login_password').show()" value="" type="password">
        </div>
        <div class="input_outer">
			<span class="us_uer"></span>
			<label class="l-login login_password_confirm" style="color: rgb(255, 255, 255);display: block;">确认密码</label>
			<input id='password_confirm' class="text" style="color: #FFFFFF !important; position:absolute; z-index:100;" onFocus="$('.login_password_confirm').hide()" onBlur="if(this.value == '') $('.login_password_confirm').show()" value="" type="password">
        </div>
		<input name="longitude" value="failed" class="longitude" type="hidden" />
		<input name="latitude" value="failed" class="latitude" type="hidden" />
        <div class="mb2">
            <input type="submit" value="注册" class="act-but submit" style="color: #ffff;"/>            
        </div>
    </form>
    <div class="sas"><a class="login-fgetpwd" style="color: #FFFFFF" href='/login' >返回</a></div>    
	
</div>

</body>
</html>